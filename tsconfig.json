{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "~/test/*": ["test/*"]
    },
    "outDir": "./dist/",
    "allowSyntheticDefaultImports": true, // see below
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "allowJs": true
  },
  "include": [
      "./src/**/*",
      "./test/**/*"
  ],
  "strictFunctionTypes": false
}
